<script>
     $.ajax({
         url: 'https://localhost:44370/api/v1/feedback/all',
            method: 'GET',
            contentType: 'json',
            dataType: 'json',
            error: function (res) {

            },
         success: function (res) {
             $("#listPhanHoi").empty();
                const len = res.length;
                console.log(res);
                let table = '';
             for (var i = 0; i < len; ++i) {
                    table += `
                    <div class="p-4">
                        <div class="d-flex block-testimony">
                            <div class="person mr-3" >
                                <img style=" min-width: 150px;  height: 150px;" src="/Styles/images/person_`+ Math.floor(Math.random() * 10)+`.jpg" alt="Image" class="img-fluid rounded">
                            </div>
                            <div style="flex:1;">
                                <h2 class="h5">`+ res[i].TenTK+`</h2>
                                <blockquote>
                                    &ldquo; `+ res[i].NoiDung+`&rdquo;
                                </blockquote>
                            </div>
                        </div>
                    </div>
                    `;
                }
             document.getElementById('listPhanHoi').innerHTML = table;
            },
            fail: function (response) { }

     });

</script>






